.sort {
    width: 100%;
    height: 100%;
}
.sort__hd {
    width: 100%;
    height: 104rpx;
    background-color: #ffffff;
    text-align: center;
}
.sort__title {
    font-size: 37rpx;
    line-height: 104rpx;
}
.sort__title__text {
    margin-left: 50rpx;
    color: #6b6b6b;
}
.sort__hd__right, .sort__hd__right image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    margin-top: 16rpx;
    float: right;
}
.sort__bd {
    width: 100%;
    height: 100%;
}
.sort__bd .sort__bd__image, .sort__bd .sort__bd__image image {
    width: 100%;
    height: 242rpx;
}
.sort__bd ul {
    width: 588rpx;
    height: 588rpx;
    border: 1px solid red;
}